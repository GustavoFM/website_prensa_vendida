	background negro
	display inline-block
	width 15%
#img_seccion_cabecera
	margin 0
	display inline-block
#img_seccion_cabecera img
	background-size contain
	margin 0
	width 100%
#img_seccion_portada
	margin 0 
#img_seccion_portada img
	margin 0
	background-size contain
	width 100%
.img_notas 
	background-size contain
	margin 0
	padding 0
	width 100%
.img_notas img
	border 2px solid blanco
	width calc(100% - 0.2em)
	/*float right*/
.izquierda
	float left
	text-align left
#libre_insercion
	/*background gris_bajo*/
	background blanco
	display inline-block
	font-size 1rem
	height 100%
	width 30%
	vertical-align top
.negro
	color negro
#nota1
	//padding-right 2em
	margin-right 1em
#nota2
	//padding-left 2em
#nota1 
#nota2
	//border 1px solid red
	background gris_bajo_trans 
	display inline-block
	font-size 1rem
	padding 0.5em //se elimina si se descomentan los padding de #nota1 y #nota2
	width 45%
	vertical-align top
	text-align left
.notas
	//border 1px solid red
	font-size 0
	text-align center
	padding 0.5rem
.columnas_libre_insercion
#noti_secciones
	background gris_bajo
	border 1px solid gris_medio
	font-size 0.9em
	padding 0.5em
	margin 0.5em
.columnas_libre_insercion
	&:hover
		transition all 1s linear
		background blanco
#portada
	background azul_blanco_trans
	//border 1px solid red
	padding 0.5em
	//font-size 1rem
.redes_sociales
	background blanco
	color negro
	display inline-block
	width 100%
.roja
	color rojo
#secciones
	font-size 1rem
	background gris_bajo
	display inline-block
	vertical-align top
	width 30%
#seccion_basurero
	background gris_muy_bajo
	display inline-block
	font-size 1rem
	width 70%
	#xalapa
	#ejecutivo
	#legislativo
		display inline-block
		vertical-align top
		width calc(100% / 3 - 2em)
#seccion_portada
	background gris_muy_bajo
	display inline-block
	font-size 1rem
	width 70%
#texto_fechador
	font-size 0.8em
.texto_pie 
	color cafe_claro
	font-size 0.8em
	vertical-align top
#titulo_basurero
#titulo_libre_insercion
	background blanco
	padding 0.5em
#titulo_cabecera
	color negro
	display inline-block
	font-size 1rem
	margin-top 2.5em
	text-align center
	vertical-align top
	width 85%
#xalapa
	background gris_basurero_ayuntamientos
	font-size 0.9rem
	padding 1em
#ejecutivo
	background gris_basurero_ejecutivo
	font-size 0.9rem
	padding 1em
#legislativo
	background gris_basurero_legislativo
	font-size 0.9rem
	padding 1em

@media screen and (max-width:1000px)
	#contenedor
	#seccion_portada
	#libre_insercion
	#seccion_basurero
	#secciones
		width 100%
		transition width 1s linear
	#contenedor
		border-left none
		border-right none
	#fechador
		transition all 1s linear
		text-align center
	#secciones
		width 100%
	.iconos_redes_sociales
		background gris_muy_bajo
		border none
		border-top none
		/*border-bottom-right-radius 0.5em
		border-bottom-left-radius 0.5em*/
		border-radius 0.5em
		float none
		margin 0 auto
		/*float right*/
		margin-top 1em
		margin-bottom 1em
		padding 0.5em
		text-align center
		width 80%
	.fa-twitter
	.fa-facebook
	.fa-youtube
	.fa-twitter-square
	.fa-facebook-square
	.fa-youtube-square
		color red
		padding 0 1em
	#titulo_cabecera
		margin 2rem 0 2rem 0
		font-size 0.9rem
		width 100%
	#img_cabecera
		display none

@media screen and (max-width:640px)
	#nota2 
		border-top 1em solid gris_muy_bajo
	#nota1 
	#nota2
		transition all 1s linear
		margin 0 auto
		width calc(100% - 2em)	