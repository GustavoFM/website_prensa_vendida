@import "normalize.styl"

//Se pueden crear variables
//#7E8B94
gris_azul = rgba(126, 139, 148, 1)
//#636A6F
gris = rgba(99, 106, 111, 1)
//#2A4B61 
azul = rgba(42, 75, 97, 1)
//#B4C2CA
azul_claro = rgba(180, 194, 202, 1) 
//#BAC4CA
azul_blanco = rgba(186, 196, 202, 1)
azul_blanco_trans = rgba(186, 196, 202, 0.7)
cafe_claro = #DCC8B0
cafe_medio = #1A1A1A
cafe_oscuro = #867D74


a
	text-decoration none
h1
h2
h3
	font-family 'Cousine'
	font-weight 400
	margin 0
body
	background url('../imgs/ciudad.bmp') fixed
	font-family 'Courier'
figcaption
	background azul_blanco_trans
	bottom 1em
	display block
	font-size 1.1em
	font-weight bold
	padding 0.5em
	position absolute
figure 
	position relative
header
	background azul
	color white
	padding 2em 1em
#articulos
	font-size 0
#bloque_inferior
	background rgba(0,0,0,0.8)
	font-size 0
#bloque_superior
	background rgba(0,0,0,0.8)
	font-size 0
#contenedor
	margin 0 auto
	width 85%
#division
	display inline-block
	border-right 1px solid red
#libre_insercion
	background azul_claro
	display inline-block
	font-size 1rem
	height 100%
	width 30%
	vertical-align top
#img_seccion_portada
	margin 0 
#img_seccion_portada img
	margin 0
	background-size contain
	width 100%
#nota1
	//padding-right 2em
#nota2
	//padding-left 2em
#nota1 
#nota2
	border 1px solid red 
	display inline-block
	font-size 1rem
	padding 0.5em //se elimina si se descomentan los padding de #nota1 y #nota2
	width 44%
	vertical-align top
#noti_libre_insercion 
#noti_secciones
	border 1px solid red
	padding 0.5em
	margin 0.5em
#portada 
	border 1px solid red
	padding 0.5em
	//font-size 1rem
#secciones
	font-size 1rem
	background azul_blanco
	display inline-block
	vertical-align top
	width 30%
#seccion_basurero
	background gris
	display inline-block
	font-size 1rem
	width 70%
	#xalapa
	#ejecutivo
	#legislativo
		display inline-block
		vertical-align top
		width calc(100% / 3 - 2em)
#seccion_portada
	background gris_azul
	display inline-block
	font-size 1rem
	width 70%
.notas
	border 1px solid red
	font-size 0
	text-align center
	padding 0.5rem
#titulo_basurero
	padding 0.5em
#xalapa
	background cafe_claro
	font-size 0.9rem
	padding 1em
#ejecutivo
	background cafe_medio
	font-size 0.9rem
	color cafe_claro
	padding 1em
#legislativo
	background cafe_oscuro
	font-size 0.9rem
	padding 1em

@media screen and (max-width:1000px)
	#contenedor
	#seccion_portada
	#libre_insercion
	#seccion_basurero
	#secciones
		width auto
	#secciones
		width 100%