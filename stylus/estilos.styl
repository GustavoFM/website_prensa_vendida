a
	text-decoration none
body
	background url('../background/fondo.png') 1% fixed
	//background url('../imgs/ciudad.bmp') fixed
	//background blanco
	//background-image linear-gradient(to bottom, negro 0%, gris 20%, gris_medio 40%, gris_medio 65%, gris 80%, negro 100%)
	//background-image linear-gradient(to bottom, #000 0%, gris 70%, #CCC 100%)
	//background negro
	font-family 'Courier'
figcaption
	background azul_blanco_trans
	bottom 1em
	display block
	font-size 1.1em
	font-weight bold
	padding 0.5em
	position absolute
figure 
	position relative
footer
	background rgba(0,0,0,0.8)
	border-top 2px solid cafe_claro
	text-align right
header
	background blanco_trans
	border-bottom 1px solid negro
	color rojo
	font-size 0
	margin 0.5em 0 0 0
	padding 0em 0em
	position relative
h1 
	display inline-block
	font-size 6em
h1
h2
h3
	//font-family 'Cousine'
	font-family 'Righteous', cursive	
	font-weight 400
	margin 0

.ajustar
	clear both
#articulos
	font-size 0
#bloque_inferior
	/*background rgba(0,0,0,1)*/
	background blanco_trans
	font-size 0
#bloque_superior
	/*background rgba(0,0,0,1)*/
	background blanco_trans
	font-size 0
.caja_fecha_nota
	background blanco
	display inline-block
	border 1px solid rojo
	border-bottom-right-radius 20%
	border-bottom-left-radius 20%
	float left
	font-size 0.8em
	margin 0 0.5em 0.5em 0
	/*padding 0.2em 0.6em 0.5em 0.6em*/
.caja_fecha_y_credito
	display block
#contenedor
	border-left 0.2em solid white
	border-right 0.2em solid white
	margin 0 auto
	width 85%
	transition width 1s linear
.credito
	background gris_muy_bajo
	border-radius 0.3em
	color negro
	display inline-block
	font-size 0.8em
	padding 0.2em
.derecha
	text-align right
	float right
.dia_nota
.mes_nota
.agno_nota
	display block
	text-align center
.dia_nota
	background blanco_trans
	border-top 2px solid rojo
	font-size 1.8em
	font-weight bold
	padding 0 0.2em
.mes_nota
	background rojo
	color blanco
	font-weight normal
.agno_nota
	font-size 0.8em
#division
	display inline-block
	border-right 1px solid red
.encabezados 
	background blanco_trans
	border-bottom 1px solid negro
	color negro
	margin-bottom 0.1em
	padding 0.2em
#fechador
	background negro
	top 0
	color blanco
	font-size 1rem
	/*margin 0*/
	padding 0.2em 0.2em
	position absolute
	/*text-align center*/
	width calc(100% - 0.4em)
.fa-twitter
.fa-facebook
.fa-youtube
.fa-twitter-square
.fa-facebook-square
.fa-youtube-square
	color gris_medio
	padding 0 0.1em
.fa-twitter
.fa-facebook
.fa-youtube
.fa-twitter-square
.fa-facebook-square
.fa-youtube-square
	&:hover 
		transition all 1s ease
		color red
.iconos_redes_sociales
	border 1px solid negro
	border-top none
	border-bottom-right-radius 0.5em
	border-bottom-left-radius 0.5em
	/*margin 0 auto*/
	float right
	margin-bottom 1em
	padding 0.5em
	text-align center
	width 45%
	/*max-height 0
	overflow hidden
	transition max-height 0.8s*/
/*.redes_sociales:hover .iconos_redes_sociales
	max-height: 200px;*/
#img_desarrollador
	width 5%
